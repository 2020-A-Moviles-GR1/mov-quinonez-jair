<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecycleActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_usuarios"
        android:layout_width="394dp"
        android:layout_height="509dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_titulo_rv"
        app:layout_constraintStart_toStartOf="@+id/tv_titulo_rv"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_rv" />

    <TextView
        android:id="@+id/tv_titulo_rv"
        android:layout_width="69dp"
        android:layout_height="24dp"
        android:layout_marginTop="64dp"
        android:text="Titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>