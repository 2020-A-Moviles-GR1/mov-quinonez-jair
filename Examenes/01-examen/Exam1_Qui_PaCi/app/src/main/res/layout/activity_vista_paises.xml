<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistaPaises">

    <ListView
        android:id="@+id/list_paises"
        android:layout_width="371dp"
        android:layout_height="256dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_eliminar_pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="256dp"
        android:text="ELIMINAR PAIS"
        app:layout_constraintEnd_toEndOf="@+id/list_paises"
        app:layout_constraintTop_toBottomOf="@+id/list_paises" />

    <Button
        android:id="@+id/btn_editar_pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="EDITAR PAIS"
        app:layout_constraintEnd_toEndOf="@+id/list_paises"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_eliminar_pais"
        app:layout_constraintTop_toBottomOf="@+id/list_paises" />
</androidx.constraintlayout.widget.ConstraintLayout>