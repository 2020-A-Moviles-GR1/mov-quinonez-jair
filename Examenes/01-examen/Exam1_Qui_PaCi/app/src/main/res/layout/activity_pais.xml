<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pais">

    <Button
        android:id="@+id/btn_verPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="4dp"
        android:text="VER PAISES "
        app:layout_constraintEnd_toEndOf="@+id/text_ciudad"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_guardarPais"
        app:layout_constraintTop_toBottomOf="@+id/text_ciudad" />

    <Button
        android:id="@+id/btn_guardarPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="@+id/text_ciudad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_ciudad"
        app:layout_constraintTop_toBottomOf="@+id/text_ciudad" />

    <EditText
        android:id="@+id/text_ciudad"
        android:layout_width="366dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Ciudad"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/text_costa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_costa"
        app:layout_constraintTop_toBottomOf="@+id/text_costa" />

    <EditText
        android:id="@+id/text_costa"
        android:layout_width="366dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Costa"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/text_area"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_area"
        app:layout_constraintTop_toBottomOf="@+id/text_area" />

    <EditText
        android:id="@+id/text_area"
        android:layout_width="366dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Area"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/text_nombrePais"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_nombrePais"
        app:layout_constraintTop_toBottomOf="@+id/text_nombrePais" />

    <EditText
        android:id="@+id/text_nombrePais"
        android:layout_width="366dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Nombre Pais"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/text_idPais"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_idPais"
        app:layout_constraintTop_toBottomOf="@+id/text_idPais" />

    <EditText
        android:id="@+id/text_idPais"
        android:layout_width="366dp"
        android:layout_height="52dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>