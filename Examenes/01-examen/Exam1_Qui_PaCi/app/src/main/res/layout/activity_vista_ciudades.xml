<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistaCiudades">

    <Button
        android:id="@+id/btn_editar_ciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="EDITAR CIUDAD"
        app:layout_constraintEnd_toEndOf="@+id/list_ciudades"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/list_ciudades"
        app:layout_constraintTop_toBottomOf="@+id/list_ciudades" />

    <Button
        android:id="@+id/btn_eliminar_ciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="116dp"
        android:text="ELIMINAR CIUDAD"
        app:layout_constraintEnd_toEndOf="@+id/list_ciudades"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_editar_ciudad"
        app:layout_constraintTop_toBottomOf="@+id/list_ciudades" />

    <ListView
        android:id="@+id/list_ciudades"
        android:layout_width="371dp"
        android:layout_height="256dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>