<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".VistaCiudades">

    <ListView
        android:id="@+id/list_ciudades"
        android:layout_width="368dp"
        android:layout_height="297dp"
        android:layout_marginTop="164dp"
        android:background="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="106dp"
        android:layout_height="32dp"
        android:layout_marginTop="48dp"
        android:text="LISTA"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/list_ciudades"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24" />

    <ImageView
        android:id="@+id/iv_ciudad"
        android:layout_width="160dp"
        android:layout_height="156dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/list_ciudades"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/list_ciudades"
        app:layout_constraintTop_toBottomOf="@+id/list_ciudades"
        app:srcCompat="@drawable/test" />

    <TextView
        android:id="@+id/txt_ID"
        android:layout_width="120dp"
        android:layout_height="23dp"
        android:layout_marginTop="24dp"
        android:text="NOMBRE CIUDAD"
        android:textAlignment="center"
        android:textColor="#FFC107"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_ciudades" />

    <Button
        android:id="@+id/btn_irEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:background="#FFC107"
        android:text="MODIFICAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_ciudades" />

    <Button
        android:id="@+id/btn_mapear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#FFC107"
        android:text="MAPEAR"
        app:layout_constraintEnd_toEndOf="@+id/btn_irEditar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_irEditar"
        app:layout_constraintTop_toBottomOf="@+id/btn_irEditar" />

</androidx.constraintlayout.widget.ConstraintLayout>